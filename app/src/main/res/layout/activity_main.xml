<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.doge.smartgym3.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/workout"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:gravity="center"/>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/exercise"
        style="@style/Card"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exercise"
                android:textSize="20sp"/>

            <Spinner
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:entries="@array/exercises"
                android:gravity="right"
                android:id="@+id/spinner_exercise_type">
            </Spinner>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/weight"
        style="@style/Card"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight"
                android:textSize="20sp"
                android:padding="16dp"/>

            <EditText
                android:hint="60"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:lines="1"
                android:maxLines="1"
                android:inputType="numberDecimal"
                android:gravity="center"
                android:maxLength="5"
                android:padding="12dp"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/weights_end_space"
                android:id="@+id/new_exercise_weight" />

            <TextView
                android:id="@+id/weights_unit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="16dp"
                android:paddingRight="6dp"
                android:paddingLeft="0dp"
                android:text="kg"
                android:gravity="right"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/weights_end_space" />

            <Space
                android:id="@+id/weights_end_space"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rest_time"
        style="@style/Card"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rest time"
                android:textSize="20sp"
                android:padding="16dp"/>

            <EditText
                android:hint="30"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:lines="1"
                android:maxLines="1"
                android:inputType="number"
                android:gravity="center"
                android:maxLength="2"
                android:padding="12dp"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/rest_time_end_space"
                android:id="@+id/new_exercise_rest" />

            <TextView
                android:id="@+id/rest_time_unit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="16dp"
                android:paddingRight="6dp"
                android:paddingLeft="0dp"
                android:text="s"
                android:gravity="right"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/rest_time_end_space" />

            <Space
                android:id="@+id/rest_time_end_space"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sets"
        style="@style/Card"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sets"
                android:textSize="20sp"
                android:padding="16dp"/>

            <EditText
                android:hint="3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:lines="1"
                android:maxLines="1"
                android:inputType="number"
                android:gravity="center"
                android:maxLength="2"
                android:padding="12dp"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/sets_end_space"
                android:id="@+id/new_exercise_sets" />

            <Space
                android:id="@+id/sets_end_space"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/reps"
        style="@style/Card"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reps per set"
                android:textSize="20sp"
                android:padding="16dp"/>

            <EditText
                android:hint="10"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:lines="1"
                android:maxLines="1"
                android:inputType="number"
                android:gravity="center"
                android:maxLength="2"
                android:padding="12dp"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/reps_end_space"
                android:id="@+id/new_exercise_reps" />

            <Space
                android:id="@+id/reps_end_space"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/go_button"
        android:background = "@drawable/rounded_button"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:onClick="startWorkout"
        android:text="LET'S GO" />

</LinearLayout>
